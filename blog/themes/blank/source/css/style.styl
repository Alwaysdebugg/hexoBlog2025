@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.6s ease forwards;
}

// Navigation Bar Styles
.nav-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: var(--navbg);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border);
  transition: all 0.3s ease;
}

.nav-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-items {
  display: flex;
  align-items: center;
  gap: 32px;
}

.nav-item {
  position: relative;
  color: var(--text);
  font-size: 15px;
  font-weight: 500;
  text-decoration: none;
  padding: 8px 0;
  transition: all 0.2s ease;
}

.nav-item:hover {
  color: var(--link);
  text-decoration: none;
}

.nav-item.active {
  color: var(--link);
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background: var(--link);
  border-radius: 2px;
}

// Dark mode toggle
.dark-mode-toggle {
  background: none;
  border: none;
  padding: 8px;
  cursor: pointer;
  color: var(--text);
  transition: all 0.2s ease;
}

.dark-mode-toggle:hover {
  color: var(--link);
}

// Mobile navigation
.nav-toggle {
  display: none;
  background: none;
  border: none;
  padding: 8px;
  cursor: pointer;
  color: var(--text);
}

@media (max-width: 768px) {
  .nav-toggle {
    display: block;
  }

  .nav-items {
    position: fixed;
    top: 64px;
    left: 0;
    right: 0;
    background: var(--navbg);
    padding: 16px;
    flex-direction: column;
    gap: 16px;
    transform: translateY(-100%);
    opacity: 0;
    transition: all 0.3s ease;
  }

  .nav-items.active {
    transform: translateY(0);
    opacity: 1;
  }
}

// Additional Navigation Styles
.nav-logo {
  display: flex;
  align-items: center;
}

.logo-text {
  font-size: 20px;
  font-weight: 600;
  color: var(--text);
  text-decoration: none;
  font-family: 'Nunito Sans';
  transition: all 0.2s ease;
}

.logo-text:hover {
  color: var(--link);
  text-decoration: none;
}

.logo-image img {
  height: 32px;
  width: auto;
  border-radius: 6px;
}

.nav-item i {
  margin-right: 6px;
  font-size: 14px;
}

.social-icons {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-left: 16px;
  padding-left: 16px;
  border-left: 1px solid var(--border);
}

.social-icon {
  color: var(--text);
  font-size: 16px;
  transition: all 0.2s ease;
}

.social-icon:hover {
  color: var(--link);
  transform: scale(1.1);
}

.dark-mode-toggle i {
  font-size: 16px;
}

// Enhance mobile styles
@media (max-width: 768px) {
  .nav-inner {
    height: 56px;
  }
  
  .social-icons {
    margin: 0;
    padding: 16px 0;
    border-left: none;
    border-top: 1px solid var(--border);
    justify-content: center;
  }
  
  .nav-toggle {
    font-size: 20px;
  }
  
  .nav-items {
    padding: 24px;
  }
  
  .nav-item {
    width: 100%;
    text-align: center;
    padding: 12px 0;
  }
  
  .dark-mode-toggle {
    width: 100%;
    padding: 12px 0;
    margin-top: 8px;
    border-top: 1px solid var(--border);
  }
}

