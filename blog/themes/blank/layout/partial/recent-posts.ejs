<% if (page.posts.length > 0) { %>
  <div id="recent-posts">
    <% page.posts.each(function (post) { %>
      <div class="recent-post-item">
        <!-- <div class="post-image">
          <img src="<%= post.image || '/img/default-image.jpg' %>" alt="<%= post.title %>">
        </div> -->
        <div class="post-content">
          <div class="post-title">
            <a href="<%= url_for(post.path) %>"><%= post.title %></a>
          </div>
          <div class="post-meta">
            <span class="post-date"><%= date(post.date, 'YYYY.MM.DD') %></span>
            <% if (post.top || post.sticky > 0) { %>
              <span class="post-sticky"><i class="far fa-bookmark"></i> <%= __('Sticky') %></span>
            <% } %>
          </div>
          <div class="content">
            <% if (post.excerpt) { %>
              <%- post.excerpt.replace(/<p>(.*?)<\/p>/, '$1') %>
            <% } else { %>
              <% 
                const pContent = post.content.match(/<p>(.*?)<\/p>/);
                const text = pContent ? pContent[1] : '';
              %>
              <%- strip_html(truncate(text, { length: 200 })) %>
            <% } %>
          </div>
          <div class="readmore">
            <a href="<%= url_for(post.path) %>">阅读全文 »</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

